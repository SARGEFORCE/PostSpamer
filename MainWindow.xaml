<Window x:Class="PostSpamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostSpamer"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="PostSpamer" Height="450" Width="734">
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать"/>
                <MenuItem Header="Открыть"/>
                <MenuItem Header="Сохранить"/>
                <Separator/>
                <MenuItem Header="Выход" Click="ExitMenuItem_OnClick"/>
            </MenuItem>
            <MenuItem Header="Сервис">
                <MenuItem Header="Параметры"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" Click="AboutMenuItem_OnClick"/>
                <MenuItem Header="Создатели"/>
                <MenuItem Header="Поддержать проект"/>

            </MenuItem>
        </Menu>
        
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock>Готов к рассылке спама!</TextBlock>
            <StatusBarItem Width="auto">
                <ProgressBar Value="50" Width="220" Height ="10"></ProgressBar>
            </StatusBarItem>
            
        </StatusBar>
        
        <TabControl>
            <TabItem Header="Рассылка">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <ToolBarTray Grid.Row="0">
                    <!--======================================================-->
                        <ToolBar Band="0" BandIndex="0">
                            <Label Width="85">Отправители</Label>
                            <ComboBox MinWidth="75" MaxWidth="100">
                                <ComboBoxItem>Отправитель 1</ComboBoxItem>
                                <ComboBoxItem>Отправитель 2</ComboBoxItem>
                                <ComboBoxItem>Отправитель 3</ComboBoxItem>
                                <ComboBoxItem>Отправитель 4</ComboBoxItem>
                            </ComboBox>
                            <Button ToolTip="Редактировать">
                                <fa:ImageAwesome Height="16" Icon="Edit"></fa:ImageAwesome>
                            </Button>
                            <Button ToolTip="Создать">
                                <fa:ImageAwesome Height="16" Icon="Plus"></fa:ImageAwesome>
                            </Button>
                            <Button ToolTip="Удалить">
                                <fa:ImageAwesome Height="16" Icon="Trash"></fa:ImageAwesome>
                            </Button>
                        </ToolBar>                        
                        <!--======================================================-->
                        <ToolBar BandIndex="1">
                            <Label>Серверы</Label>
                            <ComboBox MinWidth="75" MaxWidth="100">
                                <ComboBoxItem>Сервер 1</ComboBoxItem>
                                <ComboBoxItem>Сервер 2</ComboBoxItem>
                                <ComboBoxItem>Сервер 3</ComboBoxItem>
                                <ComboBoxItem>Сервер 4</ComboBoxItem>
                            </ComboBox>
                            <Button ToolTip="Редактировать">
                                <fa:ImageAwesome Height="16" Icon="Edit"></fa:ImageAwesome>
                            </Button>
                            <Button ToolTip="Создать">
                                <fa:ImageAwesome Height="16" Icon="Plus"></fa:ImageAwesome>
                            </Button>
                            <Button ToolTip="Удалить">
                                <fa:ImageAwesome Height="16" Icon="Trash"></fa:ImageAwesome>
                            </Button>
                        </ToolBar>
                        <!--======================================================-->                        
                        <ToolBar BandIndex="2">
                            <Label>Перейти в планировщик:</Label>
                            <Button>
                                <fa:ImageAwesome Height="16" Icon="ClockOutline"></fa:ImageAwesome>
                            </Button>
                        </ToolBar>
                        <!--======================================================-->
                        <ToolBar Band="1">
                            <Label Width="85">Получатели</Label>
                        </ToolBar>
                    </ToolBarTray>
                </Grid>
            </TabItem>
            <TabItem Header="Планировщик">

            </TabItem>
            <TabItem Header="Письма">

            </TabItem>
        </TabControl>
    </DockPanel>    
</Window>
