<UserControl x:Class="PostSpamer.controls.TabSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostSpamer.controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="1" Button.Click="Button_OnClick">
        <Button x:Name="LeftButton">
            <fa:ImageAwesome Icon="ArrowLeft"/>
        </Button>
        <Button x:Name="RightButton">
            <fa:ImageAwesome Icon="ArrowRight"/>
        </Button>
    </UniformGrid>
</UserControl>
