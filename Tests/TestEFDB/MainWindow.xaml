<Window x:Name="MainProgram" x:Class="TestEFDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEFDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="726">
    <Grid>
        <DataGrid Margin="10,10,10,45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="200"/>
                <DataGridTextColumn Header="Email" Width="120"/>
                <DataGridTextColumn Header="Phone" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Открыть CSV" HorizontalAlignment="Left" Margin="10,386,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="151,386,0,0" VerticalAlignment="Top" Width="136"/>
        <Button Content="Сохранить как" HorizontalAlignment="Left" Margin="292,386,0,0" VerticalAlignment="Top" Width="136"/>
        <Button Content="Обновить" HorizontalAlignment="Left" Margin="433,386,0,0" VerticalAlignment="Top" Width="136"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="574,386,0,0" VerticalAlignment="Top" Width="136"/>

    </Grid>
</Window>
